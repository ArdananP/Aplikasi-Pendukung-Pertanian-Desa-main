#:kivy 2.0.0
<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 50, 20, 20]
        spacing: 15
        canvas.before:
            Color:
                rgba: (0.96, 0.96, 0.96, 1)  # Background terang
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Login'
            font_size: 28
            color: (0, 0, 0, 1)  # Warna teks hitam
            bold: True
            halign: 'center'
            size_hint_y: None
            height: 40

        MinimalTextInput:
            id: username
            hint_text: 'Username'
            multiline: False  # Input satu baris
            write_tab: False  # Tidak pindah fokus dengan Tab

        MinimalTextInput:
            id: password
            hint_text: 'Password'
            password: True
            multiline: False
            write_tab: False

        MinimalButton:
            text: 'Login'
            on_press: root.login()

        MinimalButton:
            text: 'Daftar'
            on_press: root.go_to_register()

<MinimalTextInput@TextInput>:
    size_hint_y: None
    height: 40
    multiline: False  # Input satu baris
    write_tab: False
    background_normal: ''  # Hapus latar belakang default
    background_active: ''  # Hapus latar aktif
    # canvas.before:
    #     Color:
    #         rgba: (0.9, 0.9, 0.9, 1)  # Background abu-abu terang
    #     RoundedRectangle:
    #         pos: self.pos
    #         size: self.size
    #         radius: [10]
    padding: [10, 10]
    font_size: 16
    foreground_color: (0, 0, 0, 1)  # Teks hitam
    hint_text_color: (0.7, 0.7, 0.7, 1)  # Hint abu-abu terang
    cursor_color: (0.2, 0.6, 0.86, 1)  # Cursor biru

<MinimalButton@Button>:
    background_normal: ''  # Hapus background default
    background_color: (1, 0.8, 0.2, 1)  # Background oranye
    color: (1, 1, 1, 1)  # Teks putih
    font_size: 16
    size_hint_y: None
    height: 45
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [22.5]
