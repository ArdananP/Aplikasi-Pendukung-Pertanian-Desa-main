#:kivy 2.0.0

<IntroScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 40
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size

        RoundedImageButton:
            source: 'assets/logo.png'
            size_hint: (1, 1)

        Label:
            text: "Selamat Datang Di\nAplikasi Pendukung Pertanian Desa"
            font_size: 26
            color: 0, 0, 0, 1  # Warna teks hitam
            font_name: 'assets/font/Atop.ttf'
            size_hint_x: None
            width: self.parent.width * 0.8
            halign: 'center'
            text_size: self.size
            pos_hint: {"center_y": 1}
            padding: 50

        RoundedButton:
            text: "NEXT"
            size_hint: (1, 0.1)
            on_press: root.go_to_login()

<RoundedImageButton@ButtonBehavior+Image>:
    source: ''
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [50, 50, 50, 50]

<RoundedButton@Button>:
    background_normal: ''
    background_color: 1, 0.8, 0.2, 1
    font_size: 18
    color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30, 30, 30, 30]
