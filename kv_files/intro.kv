#:kivy 2.0.0

<IntroScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 40
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Latar belakang putih
            Rectangle:
                pos: self.pos
                size: self.size

        RoundedImageButton:
            source: 'assets/logo.png'
            size_hint: (1, 1)

        Label:
            text: "Selamat Datang Di\nAplikasi Pendukung Pertanian Desa"
            font_size: 24
            halign: 'center'
            color: 0, 0, 0, 1  # Warna teks hitam untuk keterbacaan
            font_name: 'assets/font/Atop-R99O3.ttf'  # Tentukan path ke file font Anda

        RoundedButton:
            text: "NEXT"
            size_hint: (1, 0.1)
            on_press: root.go_to_login()

<RoundedImageButton@ButtonBehavior+Image>:
    source: ''
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Warna latar belakang tombol
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [50, 50, 50, 50]  # Sudut yang melengkung

<RoundedButton@Button>:
    background_normal: ''  # Menghapus latar belakang default
    background_color: 1, 0.8, 0.2, 1  # Warna oranye tertentu
    font_size: 18
    color: 1, 1, 1, 1  # Warna teks putih
    canvas.before:
        Color:
            rgba: self.background_color  # Menggunakan warna tombol
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30, 30, 30, 30]  # Sudut yang melengkung
